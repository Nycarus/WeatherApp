@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-5">Weather Application</h1>

    <form class='card p-3 bg-light'>
        <div class="row mb-3">
            <label for="city" class="col-sm-2 col-form-label">City:</label>
            <div class="col-sm-10 my-auto">
                <input type="text" class="form-control" id="city" placeholder="Toronto">
            </div>
        </div>
        <div class="row mb-3">
            <label for="countryCode" class="col-sm-2 col-form-label">Country Code:</label>
            <div class="col-sm-10 my-auto">
                <input type="text" class="form-control" id="countryCode" placeholder="CA">
            </div>
        </div>
        <div class="form-group">
            <button id="cityButton" type="button" class="btn btn-primary mb-2">Get City Weather</button>
            <button id="locationButton" type="button" class="btn btn-primary mb-2">Current Location Weather</button>
        </div>
    </form>

    <div id="weather-forcast" class='card p-3 bg-light mt-3' style="min-height: 50vh;">

    </div>
</div>

@section WeatherScripts{
    <script type="text/javascript" src="/js/weather.js"></script>
}